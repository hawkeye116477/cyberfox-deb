#!/bin/sh
set -e

. /usr/share/debconf/confmodule

db_version 1.0
db_capb
db_title 'cyberfox-release'
if grep -q '^\s*deb\s*https://hawkeye116477.github.io/cyberfox-deb/' /etc/apt/sources.list && ! test -f /etc/apt/sources.list.d/cyberfox-release.list
then
    # The user already has a manual entry for Cyberfox
    db_set cyberfox-release/add-deb-source false
fi

db_input high cyberfox-release/add-deb-source || true
db_go || true


exit 0